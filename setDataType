###########################################################

# Union() ::> Birlestirmek ::> iki farkli set (kume)'yi farkli bir degisken uzerinde birlestirir.

harfler1 = {"a" , "b" , "c" , "d" , "e" , "f"}

harfler2 = {"g" , "h" , "i" , "j" , "k"}


HARFLER = harfler1.union(harfler2)

print(HARFLER)


########################################################


for sayi_index , sayi in enumerate(HARFLER):
    print(f"{sayi_index} - ) {sayi}")
