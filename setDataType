Rakamlar.discard(6)
print(Rakamlar)


Rakamlar.discard(6)
print(Rakamlar)


Rakamlar.discard(6)
print(Rakamlar)

Rakamlar.discard(6)
print(Rakamlar)

Rakamlar.discard(6)
print(Rakamlar)


