arabalar_markalari = ["Mercedes" , "BMW" , "Audi" , "Kia" , "Fiat"]

araba_kumesi = set(["Mercedes" , "BMW" , "Audi" , "Kia" , "Fiat"])
print(araba_kumesi)



print("Volvo" in araba_kumesi)

isThere = "Fiat" in araba_kumesi

print(isThere)


# add() , update() ::> Eleman ekleme , kume guncelleme

araba_kumesi.add("Toyota")
araba_kumesi.add("Hyundai")
araba_kumesi.add("Renault")
araba_kumesi.add("Citroen")

print(len(araba_kumesi))


SporArabalar = {"Porsche" , "Lamborghini" , "Ferrari"}

araba_kumesi.update(SporArabalar)

print(araba_kumesi)


SporArabalar.update(araba_kumesi)
print(SporArabalar)


# Bir kumeden eleman silmek icin remove() ve discard() methodlari kullanilir.
 
